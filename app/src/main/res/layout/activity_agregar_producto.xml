<?xml version="1.0" encoding="utf-8"?>
<!-- ScrollView permite hacer scroll si el contenido es más alto que la pantalla -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Contenedor vertical que apila los elementos uno debajo de otro -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título de la pantalla -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir producto"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del producto"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio (€)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad en Stock"
            android:inputType="number"
            android:layout_marginBottom="12dp" />

        <!-- Caja de texto para que el usuario escriba los materiales -->
        <EditText
            android:id="@+id/etMateriales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Materiales"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginBottom="12dp" />

        <!-- TextView para mostrar el nombre de la imagen que el usuario ha seleccionado -->
        <TextView
            android:id="@+id/tvImagenSeleccionada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No se ha seleccionado imagen"
            android:layout_marginBottom="8dp" />

        <!-- Botón para seleccionar imagen -->
        <Button
            android:id="@+id/btnSeleccionarImagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar imagen" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar producto"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
