<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    tools:context=".DescargasActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZONA DE DESCARGAS"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#1A237E"
        android:layout_marginBottom="32dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/pbDescarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnDescargarClientes"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="24dp"
            android:text="Descargar Clientes"
            android:drawableStart="@drawable/ic_cliente_24"
            android:drawablePadding="16dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnDescargarPedidos"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="24dp"
            android:text="Descargar Pedidos"
            android:drawableStart="@drawable/ic_carrito_24"
            android:drawablePadding="16dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnDescargarProductos"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Descargar Productos"
            android:drawableStart="@drawable/ic_producto_24"
            android:drawablePadding="16dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>